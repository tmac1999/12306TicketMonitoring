<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_departure_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12:20"/>

        <TextView
            android:id="@+id/tv_arravil_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="16:20"/>

        <TextView
            android:id="@+id/tv_swz_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="12"/>

        <TextView
            android:id="@+id/tv_zy_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="12"/>

        <TextView
            android:id="@+id/tv_ze_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="12"/>

        <TextView
            android:id="@+id/tv_rw_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="12"/>

        <TextView
            android:id="@+id/tv_yw_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="12"/>

        <TextView
            android:id="@+id/tv_yz_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="12"/>

        <TextView
            android:id="@+id/tv_wz_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="12"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/item_result_textview"
            android:text="发时"/>

        <TextView
            style="@style/item_result_textview"
            android:text="到时"/>

        <TextView
            style="@style/item_result_textview"
            android:text="商务座"/>

        <TextView
            style="@style/item_result_textview"
            android:text="一等座"/>

        <TextView
            style="@style/item_result_textview"
            android:text="二等座"/>

        <TextView
            style="@style/item_result_textview"
            android:text="软卧"/>

        <TextView
            style="@style/item_result_textview"
            android:text="硬卧"/>

        <TextView
            style="@style/item_result_textview"
            android:text="硬座"/>

        <TextView
            style="@style/item_result_textview"
            android:text="无座"/>
    </LinearLayout>
</LinearLayout>